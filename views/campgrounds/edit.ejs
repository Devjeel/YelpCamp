<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"> Edit <%= campground.title %></h1>
        <div style="width: 30% ; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input  class="form-control" name="campground[title]" type="text" value="<%= campground.title %>">
                </div>
                <div class="form-group">
                    <input  class="form-control" name="campground[price]" type="number" value="<%= campground.price %>" min="1.00" step="0.5">
                </div>
                <div class="form-group">
                    <input  class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input  class="form-control" name="campground[description]" type="text" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <input class="btn btn-block btn-primary btn-lg" type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back!!</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>