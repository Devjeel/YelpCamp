<% include ../partials/header.ejs %>

    <div class="container">
        <header class="jumbotron">
            <h1>Welcome to YelpCamp!!</h1>
            <p>view our Campground from all over the world</p>
            <p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campgrounds</a></p>
            <p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Search campground" class="form-control">
                        <input type="submit" value="Search" class="btn btn-default">
                    </div>
                </form>
            </p>
        </header>
    
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <div class="col-lg-12">
                <h3>Our most beautiful Campgrounds!!!</h3>
            </div>
            <div class="col-lg-12">
                <% if(noMatch !== undefined){ %>
                    <h2><%= noMatch %></h2>
                <% } %>
            </div>
            <% campgrounds.forEach(function(campground){ %>
             <div class="col-md-3 col-sm-6">
                 <div class="thumbnail">
                     <img src="<%= campground.image %>">
                     <div class="caption">
                         <h4><strong><%= campground.title %></strong></h4>
                     </div>
                     <p>
                         <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                     </p>
                 </div>
             </div>
        <% }); %>
        </div>
    </div>
<% include ../partials/footer.ejs %>